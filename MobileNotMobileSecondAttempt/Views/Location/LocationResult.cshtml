@model MobileNotMobileSecondAttempt.Models.Measurement

@{
    ViewData["Title"] = "Location Result";
}

<h1>Estimated Location</h1>

@if (Model != null)
{
    <div class="location-result">
        <h2>Measurement Information</h2>
        <table class="table table-bordered">
            <tr>
                <th>Matavimas (ID)</th>
                <th>X</th>
                <th>Y</th>
                <th>Atstumas</th>
            </tr>
            <tr>
                <td>@Model.Matavimas</td>
                <td>@Model.X</td>
                <td>@Model.Y</td>
                <td>@Model.Atstumas</td>
            </tr>
        </table>

        <h3>Location Coordinates</h3>
        <p>Location coordinates are X: @Model.X, Y: @Model.Y with a distance of @Model.Atstumas meters.</p>
    </div>
}
else
{
    <p>No location found for the given signal strengths. Please try again with different inputs.</p>
}

<a href="@Url.Action("EstimateLocation", "Location")" class="btn btn-primary">Try Again</a>
