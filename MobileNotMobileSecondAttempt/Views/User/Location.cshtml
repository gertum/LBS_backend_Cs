@model MobileNotMobileSecondAttempt.Models.Measurement

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Location</title>
</head>
<body>
    <h1>User Measurement Location</h1>

    @if (Model != null)
    {
        <p>Measurement ID: @Model.Matavimas</p>
        <p>X: @Model.X</p>
        <p>Y: @Model.Y</p>
        <p>Atstumas: @Model.Atstumas</p>
    }
    else
    {
        <p>No location found for this user.</p>
    }

    <a href="@Url.Action("Index", "User")">Back to User List</a>
</body>
</html>
